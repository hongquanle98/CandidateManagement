@model RequirementViewModel

@{

}

@if (Model.ApplyPositionAbilities.Count == 0)
{
    <p class="text-muted">Empty</p>
}
else
{
    for (int i = 0; i < Model.ApplyPositionAbilities.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model.ApplyPositionAbilities[i].AbilityID" />
            <input type="hidden" asp-for="@Model.ApplyPositionAbilities[i].AbilityName" />
            <input asp-for="@Model.ApplyPositionAbilities[i].IsSelected" class="form-check-input" id="ability_@(Model.ApplyPositionAbilities[i].AbilityID)" />
            <label class="form-check-label" asp-for="@Model.ApplyPositionAbilities[i].IsSelected" for="ability_@(Model.ApplyPositionAbilities[i].AbilityID)">
                @Model.ApplyPositionAbilities[i].AbilityName
            </label>
        </div>
    }
}

