@model CandidateRequirementViewModel

@inject IRequiredAbilityRepository requiredAbilityRepository
@inject IApplyDetailRepository applyDetailRepository
@{
    ViewData["Title"] = "Candidate Requirement";
}

<div class="mx-5 bg-white px-5 py-4">
    <h3 class="mb-3 font-weight-light text-warning">@Model.Candidate.FullName's requirement</h3>
    <ul class="nav nav-tabs" id="myRequirementTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="saved-tab" data-toggle="tab" href="#saved" role="tab" aria-controls="saved" aria-selected="true">Saved requirement</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="applied-tab" data-toggle="tab" href="#applied" role="tab" aria-controls="applied" aria-selected="false">Applied requirement</a>
        </li>
    </ul>
    <div class="tab-content" id="myRequirementTabContent">
        <div class="tab-pane fade show active" id="saved" role="tabpanel" aria-labelledby="saved-tab">
            @await Html.PartialAsync("_SavedRequirementPartial", Model)            
        </div>
        <div class="tab-pane fade" id="applied" role="tabpanel" aria-labelledby="applied-tab">
            @await Html.PartialAsync("_AppliedRequirementPartial", Model)
        </div>
    </div>
</div>

@section Scripts {
}